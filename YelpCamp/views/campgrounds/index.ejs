    <% for (let campground of campgrounds) {%>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=campground.image%>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
