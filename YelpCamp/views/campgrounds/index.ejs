    <!-- 426 -->

    <% for (let campground of campgrounds) {%>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <%if(campground.images.length){%>

                        <img src="<%=campground.images[0].url%>" alt="" class="img-fluid">
                        <%}else{%>
                            <img src="https://res.cloudinary.com/douqbebwk/image/upload/v1600060601/YelpCamp/ahfnenvca4tha00h2ubt.png"
                                alt="" class="img-fluid">
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small-text-muted>
                                <%=campground.location%>
                            </small-text-muted>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View campground</a>
                    </div>
                </div>
            </div>
        </div>


